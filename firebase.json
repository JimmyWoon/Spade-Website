{
  "firestore": {
    "rules": "y",
    "indexes": "y"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "dist/spade",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
          "source": "/index.html",
          "destination": "/src/app/pages/home/home.component.html",
          "type": 301
      },
      {
          "source": "/",
          "destination": "/src/app/pages/home/home.component.html",
          "type": 301
      }
    ]
    
  }
}
